- [:notice, :error, :success].each do |key|
  - unless flash[key].blank?
    %p{ :class => "flash-error" }= flash[key]

%div{:class => "container-fluid"}
  %div{:class => "row"}
    %div{:class => "col-md-6"}
      %h2.heading Sessions for learning

      %h4 Pending Sessions

      %table#subjects.table.table-striped.col-md-12
        %thead
          %tr
            %th Tutor Name
            %th Subject
            %th Date
            %th Start Time
            %th End Time
        %tbody
          - @sessions.each do |session|
            -if session.pending
              %tr
                %td= link_to "#{session.tutor.account.name}", subject_tutor_reviews_path(1, session.tutor)
                %td= session.subject.name
                %td= session.start_time.strftime("%F")
                %td= session.start_time.strftime("%I:%M%p")
                %td= session.end_time.strftime("%I:%M%p")
                /todo: add in start and end time

      %h4 Verified Sessions

      %table#subjects.table.table-striped.col-md-12
        %thead
          %tr
            %th Tutor Name
            %th Subject
            %th Date
            %th Start Time
            %th End Time
        %tbody
          - @sessions.each do |session|
            -if session.verified
              %tr
                %td= link_to "#{session.tutor.account.name}", subject_tutor_reviews_path(1, session.tutor)
