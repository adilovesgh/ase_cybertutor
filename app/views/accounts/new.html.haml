
- [:notice, :error, :success].each do |key|
  - unless flash[key].blank?
    %p{ :class => "flash-error" }= flash[key]

%h2.heading Create New Account

= form_tag accounts_path do

  = label :account, :name, 'Name'
  = text_field :account, 'name'
  <br/>
  = label :account, :email, 'Email'
  = text_field :account, 'email'
  <br/>
  = label :account, :password, 'Password'
  = password_field :account, 'password'
  <br/>
  = submit_tag 'Save Changes', :class => 'btn btn-primary'