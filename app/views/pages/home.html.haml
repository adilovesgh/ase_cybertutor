%div{:class => "container-fluid"}
	%div{:class =>"row"}
		%dv{:class=>"parent"}
			%img{:class => "photo", :src=>"/main_screen.png"}
		%div{:class=>"container child"}
			%div{:class =>"prompt"} Welcome to CyberTutor!
			%br
			-unless @account.nil?
				%div{:class=>"row"}
					%div{:class=>"col-md-4"}
						%h3= link_to "All Tutors", tutors_path(), {class: "home-links"}
					%div{:class=>"col-md-4"}
						%h3= link_to "All Subjects", subjects_path(), {class: "home-links"}
					%div{:class=>"col-md-4"}
						%h3= link_to "My Account", account_path(@account), {class: "home-links"}

			- else
				%div{:class=>"row"}
					%div{:class=>"col-md-6"}
						%h3= link_to "All Tutors", tutors_path(), {class: "home-links"}
					%div{:class=>"col-md-6"}
						%h3= link_to "All Subjects", subjects_path(), {class: "home-links"}
				%br
				%div{:class=>"row"}
					%div{:class=>"col-md-6"}
						%h3= link_to "Login", login_path, {class: "home-links"}
					%div{:class=>"col-md-6"}
						%h3= link_to "Sign Up", new_account_path, {class: "home-links"}


